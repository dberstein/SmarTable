<VirtualHost *:80>
   DocumentRoot "{PATH}/public"
   ServerName example.local

   # This should be omitted in the production environment
   SetEnv APPLICATION_ENV development
    
   <Directory "{PATH}/public">
       Options Indexes MultiViews FollowSymLinks
       AllowOverride All
       Order allow,deny
       Allow from all
   </Directory>
    
</VirtualHost>
